{
    "name": "quiksass",
    "displayName": "quiksass",
    "description": "VSCode Plugin to compile scss (and scss) files automatically with every save using node-sass-package-importer and native dart/js implementation of scss",
    "publisher": "altoscode",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/altoscode/vscode-quiksass.git"
    },
    "version": "0.0.20",
    "engines": {
        "vscode": "^1.30.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:scss",
        "onCommand:quiksass.saySassVersion",
        "onCommand:quiksass.compileAll"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "quiksass.saySassVersion",
                "title": "QuikSass: Sass Compiler Version"
            },
            {
                "command": "quiksass.compileAll",
                "title": "QuikSass: Compile All SCSS Files"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "QuikSass",
            "properties": {
                "quiksass.includePath": {
                    "type": "string[]",
                    "default": [],
                    "description": "Sets the includePath for the given scss compiler. Defaults to empty list."
                },
                "quiksass.sassWorkingDirectory": {
                    "type": "string",
                    "default": "",
                    "description": "Sets the cwd - current working directory for node-sass-package-importer. Defaults to project root directory."
                },
                "quiksass.disableMinifiedFileGeneration": {
                    "type": "boolean",
                    "default": false,
                    "description": "Disables the generation of *.min.css files. By default - the flag is false and the minified file is generated."
                },
                "quiksass.debug": {
                    "type": "boolean",
                    "default": false,
                    "description": "Debug flag to be used by developers. By default, false."
                },
                "quiksass.sync": {
                    "type": "boolean",
                    "default": false,
                    "description": "Uses renderSync API to compile scss files. By default, false."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "dependencies": {
        "sass": "~1.15.2",
        "@types/sass": "~1.15.1",
        "node-sass-package-importer": "~5.2.0",
        "fibers": "~3.1.1",
        "@types/fibers": "~0.0.30"
    },
    "devDependencies": {
        "typescript": "^3.1.4",
        "vscode": "^1.1.25",
        "tslint": "^5.8.0",
        "@types/node": "^8.10.25",
        "@types/mocha": "^2.2.42"
    }
}
