{
    "name": "sasscodeplugin",
    "displayName": "sasscodeplugin",
    "description": "Plugin to Compiler sass and scss files automatically inline",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.30.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:scss",
        "onCommand:sasscodeplugin.saySassVersion",
        "onCommand:sasscodeplugin.compileAll"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "sasscodeplugin.saySassVersion",
                "title": "SassCode: Sass Compiler Version"
            },
            {
                "command": "sasscodeplugin.compileAll",
                "title": "SassCode: Compile All"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^3.1.4",
        "vscode": "^1.1.25",
        "tslint": "^5.8.0",
        "sass": "~1.15.2",
        "@types/sass": "~1.15.1",
        "@types/node": "^8.10.25",
        "@types/mocha": "^2.2.42"
    }
}
