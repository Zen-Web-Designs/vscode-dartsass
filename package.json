{
    "name": "quiksass",
    "displayName": "quiksass",
    "description": "VSCode Plugin to compile scss (and scss) files automatically with every save using node-sass-package-importer and native dart/js implementation of scss",
    "publisher": "altoscode",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/altoscode/vscode-quiksass.git"
    },
    "version": "0.0.35",
    "engines": {
        "vscode": "^1.31.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:scss",
        "onCommand:quiksass.saySassVersion",
        "onCommand:quiksass.compileAll",
        "onCommand:quiksass.compileCurrentFile"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "quiksass.saySassVersion",
                "title": "QuikSass: Sass Compiler Version"
            },
            {
                "command": "quiksass.compileAll",
                "title": "QuikSass: Compile All SCSS Files"
            },
            {
                "command": "quiksass.compileCurrentFile",
                "title": "QuikSass: Compile Current File"
            }
        ],
        "keybindings": [
            {
                "command": "quiksass.compileCurrentFile",
                "key": "ctrl+shift+l",
                "mac": "cmd+shift+l",
                "when": "editorTextFocus"
            },
            {
                "command": "quiksass.saySassVersion",
                "key": "ctrl+shift+q",
                "mac": "cmd+shift+q",
                "when": "editorTextFocus"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "QuikSass",
            "properties": {
                "quiksass.includePath": {
                    "type": "string[]",
                    "default": [],
                    "description": "Sets the includePath for the given scss compiler. Defaults to empty list."
                },
                "quiksass.sassWorkingDirectory": {
                    "type": "string",
                    "default": "",
                    "description": "Sets the cwd - current working directory for node-sass-package-importer. Defaults to project root directory."
                },
                "quiksass.disableCompileOnSave": {
                    "type": "boolean",
                    "default": false,
                    "description": "Disables the compilation with every save to prevent CPU hogging."
                },
                "quiksass.disableMinifiedFileGeneration": {
                    "type": "boolean",
                    "default": false,
                    "description": "Disables the generation of *.min.css files. By default - the flag is false and the minified file is generated."
                },
                "quiksass.debug": {
                    "type": "boolean",
                    "default": false,
                    "description": "Debug flag to be used by developers. By default, false."
                },
                "quiksass.sync": {
                    "type": "boolean",
                    "default": false,
                    "description": "Uses renderSync API to compile scss files. By default, false."
                },
                "quiksass.pauseInterval": {
                    "type": "number",
                    "default": 10,
                    "description": "Pause Interval (in seconds) before compiling again to prevent CPU hogging."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run test-compile",
        "webpack:prepublish": "webpack --mode production",
        "compile": "webpack --mode none",
        "test-compile": "tsc -p ./",
        "watch": "webpack --mode none --watch",
        "test-watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "dependencies": {
        "sass": "~1.22.0",
        "@types/sass": "~1.16.0",
        "node-sass-package-importer": "~5.3.2",
        "fibers": "~4.0.1",
        "@types/fibers": "~0.0.30"
    },
    "devDependencies": {
        "@types/mocha": "2.2.48",
        "@types/node": "8.10.38",
        "tslint": "5.18.0",
        "typescript": "3.5.2",
        "vscode": "1.1.34",
        "ts-node": "8.3.0",
        "webpack": "4.35.0",
        "webpack-cli": "3.3.5",
        "ts-loader": "6.0.4"
    }
}
