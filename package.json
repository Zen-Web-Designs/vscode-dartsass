{
    "name": "quiksass",
    "displayName": "quiksass",
    "description": "Plugin to Compiler sass and scss files automatically inline",
    "publisher": "altoscode",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/altoscode/quiksass.git"
    },
    "version": "0.0.2",
    "engines": {
        "vscode": "^1.30.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:scss",
        "onCommand:quiksass.saySassVersion",
        "onCommand:quiksass.compileAll"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "quiksass.saySassVersion",
                "title": "QuikSass: Sass Compiler Version"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "QuikSass",
            "properties": {
                "quiksass.includePath": {
                    "type": "string[]",
                    "default": "[]",
                    "description": "Sets the includePath for the given scss compiler. Defaults to empty list."
                },
                "quiksass.sassWorkingDirectory": {
                    "type": "string",
                    "default": "",
                    "description": "Sets the cwd - current working directory for node-sass-package-importer. Defaults to project root directory."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^3.1.4",
        "vscode": "^1.1.25",
        "tslint": "^5.8.0",
        "sass": "~1.15.2",
        "node-sass-package-importer": "~5.2.0",
        "@types/sass": "~1.15.1",
        "@types/node": "^8.10.25",
        "@types/mocha": "^2.2.42"
    }
}
