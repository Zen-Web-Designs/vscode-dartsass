{
    "name": "quiksass",
    "displayName": "quiksass",
    "description": "VSCode Plugin to compile scss (and scss) files automatically with every save using node-sass-package-importer and native dart/js implementation of scss",
    "publisher": "altoscode",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/altoscode/vscode-quiksass.git"
    },
    "version": "0.0.52",
    "engines": {
        "vscode": "^1.37.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:scss",
        "onCommand:quiksass.saySassVersion",
        "onCommand:quiksass.compileAll",
        "onCommand:quiksass.compileCurrentFile"
    ],
    "main": "./dist/extension",
    "contributes": {
        "commands": [
            {
                "command": "quiksass.saySassVersion",
                "title": "QuikSass: Sass Compiler Version"
            },
            {
                "command": "quiksass.compileAll",
                "title": "QuikSass: Compile All SCSS Files"
            },
            {
                "command": "quiksass.compileCurrentFile",
                "title": "QuikSass: Compile Current File"
            }
        ],
        "keybindings": [
            {
                "command": "quiksass.compileCurrentFile",
                "key": "ctrl+shift+l",
                "mac": "cmd+shift+l",
                "when": "editorTextFocus"
            },
            {
                "command": "quiksass.saySassVersion",
                "key": "ctrl+shift+q",
                "mac": "cmd+shift+q",
                "when": "editorTextFocus"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "QuikSass",
            "properties": {
                "quiksass.includePath": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "default": [],
                    "description": "Sets the includePath for the given scss compiler. Defaults to empty list."
                },
                "quiksass.sassWorkingDirectory": {
                    "type": "string",
                    "default": "",
                    "description": "Sets the cwd - current working directory for `node-sass-package-importer`. Defaults to project root directory."
                },
                "quiksass.disableCompileOnSave": {
                    "type": "boolean",
                    "default": false,
                    "description": "Disables the compilation with every save to prevent CPU hogging. Defaults to false."
                },
                "quiksass.disableMinifiedFileGeneration": {
                    "type": "boolean",
                    "default": false,
                    "description": "Disables the generation of *.min.css files. Defaults to false and the minified file is generated by default."
                },
                "quiksass.debug": {
                    "type": "boolean",
                    "default": false,
                    "description": "Debug flag to be used by developers. By default, false."
                },
                "quiksass.sync": {
                    "type": "boolean",
                    "default": false,
                    "description": "Uses renderSync API to compile scss files. By default, false."
                },
                "quiksass.pauseInterval": {
                    "type": "number",
                    "default": 10,
                    "description": "Pause Interval (in seconds) before compiling again to prevent CPU hogging."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "webpack --mode production",
        "lint": "tslint -p ./",
        "test-compile": "tsc -p ./",
        "dev": "webpack --mode development",
        "watch": "webpack --mode development --watch",
        "pretest": "npm run test-compile",
        "test": "node ./out/test/runTest.js"
    },
    "dependencies": {
        "sass": "1.22.12",
        "@types/sass": "1.16.0",
        "node-sass-package-importer": "5.3.2",
        "fibers": "4.0.1",
        "@types/fibers": "0.0.30"
    },
    "devDependencies": {
        "@types/glob": "7.1.1",
        "@types/mocha": "5.2.7",
        "@types/node": "10.14.13",
        "@types/vscode": "1.37.0",
        "glob": "7.1.4",
        "mocha": "6.2.0",
        "source-map-support": "0.5.13",
        "tslint": "5.20.0",
        "typescript": "3.6.3",
        "vscode-test": "1.2.0",
        "ts-node": "8.3.0",
        "webpack": "4.39.3",
        "webpack-cli": "3.3.8",
        "ts-loader": "6.1.0",
        "lodash": "4.17.15"
    }
}
